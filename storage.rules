rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Default to denying all access.
    // match /{allPaths=**} {
    //   allow read, write: if false;
    // }

    // Allow public read access to all files.
    // This is useful for profile pictures, post images, etc.
    match /{allPaths=**} {
      allow read;
    }

    // Allow authenticated users to write to their own designated folders.
    match /posts/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    match /profile_pictures/{userId} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    match /comment_images/{postId}/{allPaths=**} {
      allow write: if request.auth != null;
    }
    match /poll_images/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
     match /receipts/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
     match /suspicious-logins/{allPaths=**} {
        // This is open for writing as it might be triggered by unauthenticated users.
        // Consider adding more specific rules in a real production environment.
        allow write;
    }
  }
}
